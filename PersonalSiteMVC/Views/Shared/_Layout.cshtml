<html lang="en">
<head>
    <title>Ryan Eutsler Development</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Home page" />
    <meta name="author" content="Ryan Eutsler" />

    <link href="~/Content/assets/images/favicon.png" rel="icon">

    <!--Bootstrap-->
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <!--Template CSS-->
    <link rel="stylesheet" href="~/Content/assets/css/main.css" />
    <!--Custom CSS-->
    <link href="~/Content/assets/css/custom.css" rel="stylesheet" />
</head>

<body class="is-preload">

    <!-- Header -->
    <div id="side-btn" class="openbutton" onclick="openSideNav()">
        <span class="vertical-text glyphicon glyphicon-chevron-left"></span>
    </div>
    <div id="side-nav" class="sidenav">
        <header id="header">
            <div class="inner">
                <div>
                    <a href="javascript:void(0)" class="close-btn" onclick="closeSideNav()">&times;</a>
                    <div class="image avatar"><img src="~/Content/assets/images/ryanheadshot.jpg" alt="Ryan Eutsler Developement" /></div>
                    <div>
                        <h1>
                            <strong>Ryan Eutsler</strong> -
                            Full-Stack web developer in Kansas City, MO.<br />
                        </h1>
                    </div>
                    <div>
                        <a href="@Url.Action("Index","Home")">Home</a>
                        <a href="@Url.Action("Index","Home")#contact">Contact</a>
                        <a href="@Url.Action("Projects","Home")">Portfolio</a>
                        <a href="@Url.Action("Resume","Home")">Resume</a>
                        <a href="@Url.Action("Links","Home")">Links</a>
                    </div>
                </div>
            </div>
        </header>
    </div>

    <!-- Main -->
    <div id="maincontent">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer id="footer">
        <div class="inner">
            <ul class="icons">
                <li><a href="https://github.com/war-boy" target="_blank" class="icon brands fa-github"><span class="label">Github</span></a></li>
                <li><a href="@Url.Action(" Index","Home")#contact" class="icon solid fa-envelope"><span class="label">Email</span></a></li>
            </ul>
            <ul class="copyright">
                <li>&copy; Ryan Eutsler @DateTime.Now.Year</li>
                <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
            </ul>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/Content/assets/js/jquery.min.js"></script>
    <script src="~/Content/assets/js/jquery.poptrox.min.js"></script>
    <script src="~/Content/assets/js/browser.min.js"></script>
    <script src="~/Content/assets/js/breakpoints.min.js"></script>
    <script src="~/Content/assets/js/util.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    @RenderSection("scripts", required: false)

    <!--Dynamic side bar functionality wrote by Ryan Eutsler to increase responsivness. Original template had static side bar. -->
    <script>
        function openSideNav() {
            document.getElementById("side-btn").style.diplay = "none";
            document.getElementById("side-nav").style.width = "27%";
            document.getElementById("maincontent").style.marginLeft = "29%"
            document.getElementById("maincontent").style.marginRight = "3%"
        }

        function closeSideNav() {
            document.getElementById("side-btn").style.diplay = "block";
            document.getElementById("side-nav").style.width = "0";
            document.getElementById("maincontent").style.marginLeft = "10%"
            document.getElementById("maincontent").style.marginRight = "10%"
            //Hides the nav bar by returning it to it's original width and display
        }

        $('#side-nav div a').each(function () {
            if ($(this).attr('href') == window.location.pathname) {
                $(this).addClass('selected');
            }
        });
    </script>

</body>
</html>